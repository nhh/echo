<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<GridPane fx:id="grid" alignment="CENTER" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="dev.nhh.echo.controller.LayoutController">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
            Hallo Welt
        </Text>

        <Label text="Vorname:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="Nachname:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="textField"></TextField>

        <HBox GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
                <Button fx:id="startButton" mnemonicParsing="false" text="Speaker starten" onMouseClicked="#start"/>
                <Button fx:id="stopButton" mnemonicParsing="false" text="Speaker stoppen" onMouseClicked="#stop"/>
                <Button fx:id="microphoneStartButton" mnemonicParsing="false" text="Microphone starten" onMouseClicked="#startMicrophone"/>
                <Button fx:id="microphoneStopButton" mnemonicParsing="false" text="Microphone stoppen" onMouseClicked="#stopMicrophone"/>
            </children>
        </HBox>

    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
</GridPane>